extends ../_includes/layout

block variables
  - var template = 'detail';

block content
  .detail
    .detail__wrapper
      figure.detail__media
        img.detail__media-image(
          alt=product.data.image.alt,
          data-src=product.data.image.url
        )

      .detail__information
        p.detail__information-collection= product.data.collection.data.title[0].text
        h1.detail__information-title= product.data.title

        .detail__information-content
          .detail__information-highlights
            each highlight in product.data.highlights
              p.detail__information-highlight
                if highlight.highlights_icons.toLowerCase() === 'arrow'
                  svg.detail__information-highlight__icon(
                    xmlns='http://www.w3.org/2000/svg',
                    width='40',
                    height='40',
                    viewbox='0 0 40 40'
                  )
                    g#Ellipse_4(
                      data-name='Ellipse 4',
                      fill='none',
                      stroke='#fff',
                      stroke-width='1',
                      opacity='0.4'
                    )
                      circle(cx='20', cy='20', r='20', stroke='none')
                      circle(cx='20', cy='20', r='19.5', fill='none')
                    g#handler1(transform='translate(-1381.201 -595.201)')
                      g#Group_952(
                        data-name='Group 952',
                        transform='translate(-24.18 1171.14) rotate(-45)'
                      )
                        path#Polygon_1(
                          data-name='Polygon 1',
                          d='M3,0,4.2,2.133,6,4,3,3.733,0,4,1.8,2.133Z',
                          transform='translate(1416 612) rotate(90)',
                          fill='#fff'
                        )
                        path#Polygon_2(
                          data-name='Polygon 2',
                          d='M3,0,4.2,2.133,6,4,3,3.733,0,4,1.8,2.133Z',
                          transform='translate(1387 618) rotate(-90)',
                          fill='#fff'
                        )
                      line#Line_2(
                        data-name='Line 2',
                        x2='16',
                        transform='translate(1396.044 620.657) rotate(-45)',
                        fill='none',
                        stroke='#fff',
                        stroke-linecap='round',
                        stroke-width='2',
                        opacity='0.4'
                      )
                else
                  svg.detail__information-highlight__icon(
                    xmlns='http://www.w3.org/2000/svg',
                    width='40',
                    height='40',
                    viewbox='0 0 40 40'
                  )
                    g#Ellipse_5(
                      data-name='Ellipse 5',
                      fill='none',
                      stroke='#fff',
                      stroke-width='1',
                      opacity='0.4'
                    )
                      circle(cx='20', cy='20', r='20', stroke='none')
                      circle(cx='20', cy='20', r='19.5', fill='none')
                    g#Group_953(
                      data-name='Group 953',
                      transform='translate(-16.49 171.066)'
                    )
                      path#Path_3468(
                        data-name='Path 3468',
                        d='M40.755-161.2,38-152.6l8.718-2.634L38.56-151.1l8.154,4.265L38-149.654l2.822,8.906-4.265-8.342-4.139,8.154,2.634-8.718L26.455-146.9l8.154-4.2-8.342-4.328,8.78,2.823-2.822-8.781,4.327,8.342Z',
                        transform='translate(0 0)',
                        fill='#fff'
                      )

                span.detail__information-highlight__text!= highlight.highlights_text.replace(/\n/g, '<br>')

          .detail__information-list
            each item in product.data.informations
              p.detail_information-item
                strong.detail__information-item__title= item.information_label
                span.detail__information-item__description= item.information_description

          a.detail__information-link(href=product.data.link_url.url)= product.data.link_text

    button.detail__button Close
      svg.detail__button-icon(
        xmlns='http://www.w3.org/2000/svg',
        width='124',
        height='60',
        viewbox='0 0 124 60'
      )
        g#Ellipse_2(
          data-name='Ellipse 2',
          fill='none',
          stroke='#fff',
          stroke-width='1',
          opacity='0.4'
        )
          ellipse(cx='62', cy='30', rx='62', ry='30', stroke='none')
          ellipse(cx='62', cy='30', rx='61.5', ry='29.5', fill='none')
