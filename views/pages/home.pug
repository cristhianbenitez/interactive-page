extends ../_includes/layout

block variables
  - var template = 'home';

block content
  .home
    .home__wrapper
      .home__titles
        each collection, index in collections
          .home__titles-label= `${home.data.collection} ${['One', 'Two', 'Three', 'Four'][index]}`
          .home__titles-title= collection.data.title[0].text
      .home__gallery
        each media in home.data.gallery
          figure.home__gallery-media
            img.home__gallery-media__image(
              alt=media.image.alt,
              src=media.image.url
            )
      a.home__link(href=Link(home.data.collections))= home.data.button
        svg.home__link-icon(
          xmlns='http://www.w3.org/2000/svg',
          width='288',
          height='60',
          viewbox='0 0 288 60'
        )
          g#Ellipse_2(
            data-name='Ellipse 2',
            fill='none',
            stroke='#fff',
            stroke-width='1',
            opacity='0.4'
          )
            ellipse(
              cx='144',
              cy='30',
              rx='144',
              ry='30',
              stroke='currentColor'
            )
            ellipse(cx='144', cy='30', rx='143.5', ry='29.5', fill='none')
